<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#061C3A"
    android:orientation="vertical"
    tools:context=".activities.AgeCalculatorActivity">

    <include
        android:id="@+id/ageToolbar"
        layout="@layout/toolbar_layout" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="1dp"
            android:orientation="horizontal"
            android:padding="5dp">

            <TextView
                android:layout_width="180dp"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:gravity="center|start"
                android:paddingStart="5dp"
                android:paddingEnd="5dp"
                android:text="Birthday date"
                android:textColor="#F3F5F6"
                android:textSize="23sp" />

            <TextView
                android:id="@+id/birthDayDate"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="2dp"
                android:background="@drawable/button_background1"
                android:gravity="center"
                android:textColor="#F3F5F6"
                android:textSize="23sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="1dp"
            android:orientation="horizontal"
            android:padding="5dp">

            <TextView
                android:layout_width="180dp"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:gravity="center|start"
                android:paddingStart="5dp"
                android:paddingEnd="5dp"
                android:text="Today's date"
                android:textColor="#F3F5F6"
                android:textSize="23sp" />

            <TextView
                android:id="@+id/currentDate"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="2dp"
                android:background="@drawable/button_background3"
                android:gravity="center"
                android:textColor="#F3F5F6"
                android:textSize="23sp" />

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="5dp"
        android:orientation="vertical"
        android:padding="20dp">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="340dp"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:elevation="40dp"
            app:cardCornerRadius="40dp"
            app:cardElevation="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/background_gradient_2"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:gravity="center"
                    android:text="Age"
                    android:textColor="#F3F5F6"
                    android:textSize="55sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="5dp">

                    <TextView
                        android:id="@+id/showYears"
                        android:layout_width="170dp"
                        android:layout_height="match_parent"
                        android:layout_margin="3dp"
                        android:gravity="center"
                        android:paddingLeft="50dp"
                        android:text="0"
                        android:textColor="#F3F5F6"
                        android:textSize="96sp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="3dp"
                        android:gravity="center|start"
                        android:paddingTop="30dp"
                        android:text="years"
                        android:textColor="#F3F5F6"
                        android:textSize="24sp" />
                </LinearLayout>

                <View
                    android:id="@+id/view4"
                    android:layout_width="wrap_content"
                    android:layout_height="3dp"
                    android:layout_margin="10dp"
                    android:background="#858080" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/showMonths"
                        android:layout_width="90dp"
                        android:layout_height="match_parent"
                        android:layout_margin="3dp"
                        android:gravity="center"
                        android:paddingStart="25dp"
                        android:paddingEnd="1dp"
                        android:text="0"
                        android:textColor="#F3F5F6"
                        android:textSize="30sp" />

                    <TextView
                        android:id="@+id/textView10"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_margin="3dp"
                        android:gravity="center|start"
                        android:paddingTop="10dp"
                        android:text="months"
                        android:textColor="#F3F5F6" />

                    <View
                        android:id="@+id/view5"
                        android:layout_width="3dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="3dp"
                        android:background="#858080" />

                    <TextView
                        android:id="@+id/showDays"
                        android:layout_width="80dp"
                        android:layout_height="match_parent"
                        android:layout_margin="3dp"
                        android:gravity="center"
                        android:paddingStart="20dp"
                        android:paddingEnd="1dp"
                        android:text="0"
                        android:textColor="#F3F5F6"
                        android:textSize="30sp" />

                    <TextView
                        android:id="@+id/textView11"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_margin="3dp"
                        android:layout_weight="1"
                        android:gravity="center|start"
                        android:paddingTop="10dp"
                        android:text="days"
                        android:textColor="#F3F5F6" />
                </LinearLayout>
            </LinearLayout>

        </androidx.cardview.widget.CardView>
    </LinearLayout>

</LinearLayout>